{
    "background": { "scripts": [ "background.js" ] },
    "content_scripts": [
        {
            "matches": [
                "*://*.facebook.com/*",
                "*://*.github.com/*",
                "*://*.hbonordic.com/*",
                "*://*.loopia.se/*",
                "*://*.plex.tv/*",
                "*://*.netflix.com/*",
                "*://*.linkedin.com/*",
                "*://*.tele2.se/*"
            ],
            "js": [ "jquery-1.11.1.min.js", "content_script.js" ]
        }
    ],
    "description": "Extension handling passwords for your, so you don't have to.",
    "icons": {
        "128": "icon_128.png"
    },
    "name": "noPass",
    "permissions": [
        "alarms",
        "tabs",
        "webNavigation",
        "*://*.google.com/",
        "https://maps.google.com/*",
        "https://maps.googleapis.com/*"
    ],
    "page_action": {
        "default_name": "noPass",
        "default_icon": "marker.png",
        "default_popup": "popup.html"
    },
    "version": "0.21",
    "manifest_version": 2
}
