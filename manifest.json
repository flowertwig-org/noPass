{
    "background": {
        "scripts": [
            "sites-start.js", // Supported Sites
            "site-facebook.com.js",
            "site-github.com.js",
            "site-hbonordic.com.js",
            "site-loopia.se.js",
            "site-plex.tv.js",
            "site-netflix.com.js",
            "site-tele2.se.js",
            "site-linkedin.com.js",
            "site-codeproject.com.js",
            "source-mail.google.com.js", // Supported Sources
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.facebook.com/*",
                "*://*.github.com/*",
                "*://*.hbonordic.com/*",
                "*://*.loopia.se/*",
                "*://*.plex.tv/*",
                "*://*.netflix.com/*",
                "*://*.linkedin.com/*",
                "*://*.tele2.se/*",
                "*://*.google.com/*",
                "*://*.codeproject.com/*"
            ],
            "js": [ "jquery-1.11.1.min.js", "sites/github.com-content_script.js" ]
        },
        {
            "matches": [
                "*://*.facebook.com/*",
                "*://*.github.com/*",
                "*://*.hbonordic.com/*",
                "*://*.loopia.se/*",
                "*://*.plex.tv/*",
                "*://*.netflix.com/*",
                "*://*.linkedin.com/*",
                "*://*.tele2.se/*",
                "*://*.google.com/*",
                "*://*.codeproject.com/*"
            ],
            "js": [ "jquery-1.11.1.min.js", "content_script.js" ]
        }
    ],
    "description": "Extension handling passwords for your, so you don't have to.",
    "icons": {
        "128": "icon_128.png"
    },
    "name": "noPass",
    "permissions": [
        "alarms",
        "tabs",
        "webNavigation",
        "*://*.google.com/",
        "https://maps.google.com/*",
        "https://maps.googleapis.com/*"
    ],
    "page_action": {
        "default_name": "noPass",
        "default_icon": "marker.png",
        "default_popup": "popup.html"
    },
    "version": "0.21",
    "manifest_version": 2
}
