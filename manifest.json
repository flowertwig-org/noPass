{
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [ "*://*.github.com/*" ],
            "js": [ "libs/jquery-1.11.1.min.js", "sites/github.com-contentscript.js" ]
        },
        {
            "matches": [
                "*://*.facebook.com/*",
                "*://*.github.com/*",
                "*://*.hbonordic.com/*",
                "*://*.loopia.se/*",
                "*://*.plex.tv/*",
                "*://*.netflix.com/*",
                "*://*.linkedin.com/*",
                "*://*.tele2.se/*",
                "*://*.google.com/*",
                "*://*.codeproject.com/*"
            ],
            "js": [ "libs/jquery-1.11.1.min.js", "content_script.js" ]
        }
    ],
    "description": "Extension handling passwords for your, so you don't have to.",
    "icons": {
        "128": "resources/img/icon_128.png"
    },
    "name": "noPass",
    "permissions": [
        "alarms",
        "tabs",
        "webNavigation",
        "*://*.google.com/",
        "https://maps.google.com/*",
        "https://maps.googleapis.com/*"
    ],
    "page_action": {
        "default_name": "noPass",
        "default_icon": "resources/img/marker.png",
        "default_popup": "popup.html"
    },
    "version": "0.22",
    "manifest_version": 2
}
